<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jobportal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".test"></activity>
        <activity android:name=".Test" />
        <activity android:name=".ApplicantsList" />
        <activity
            android:name=".PostJob"
            android:label="Post your Job"
            android:parentActivityName=".EmployerHome" />
        <activity
            android:name=".EmployerJobView"
            android:label="Post a Job"
            android:parentActivityName=".EmployerHome" />
        <activity
            android:name=".EmployerHome"
            android:label="Home" />
        <activity
            android:name=".EmployeeHome"
            android:label="Home" />
        <activity
            android:name=".RegisterActivity"
            android:label="Register"
            android:parentActivityName=".ui.login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.login.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jobportal.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>